<% unless shipment.giftwrap.blank? %>
  <tr>
    <td colspan="4">
      <strong>Gift Wrap</strong>
    </td>
    <td class="total text-center">
      <%= shipment.giftwrap_total.to_html %>
    </td>
    <td></td>
  </tr>
<% end %>

<% unless shipment.giftmessage.blank? %>
  <tr>
    <td>
      <strong>From</strong>
    </td>
    <td colspan="5">
      <%= shipment.message_from %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>To</strong>
    </td>
    <td colspan="5">
      <%= shipment.message_to %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Gift Message</strong>
    </td>
    <td colspan="5">
      <%= shipment.giftmessage %>
    </td>
  </tr>
<% end %>
